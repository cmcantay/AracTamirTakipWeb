@using AracTamirTakip.Entities.Servis
@model IEnumerable<AracTamirTakip.Entities.Servis.Isemri>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.AcikIsemirleri != null)
{
    
    var acik = (List<Isemri>)ViewBag.AcikIsemirleri;
    if (acik.Count > 0)
    {
        <h5>Müşteriye ait açık iş emri bulunmaktadır.</h5>
    }
    <table class="table table-sm table-responsive">
        @foreach (var item in acik)
        {
            <tr>
                <td>@item.Model.Marka.MarkaAd</td>
                <td>@item.Model.ModelAd</td>
                <td>@item.Plaka</td>
                <td>@item.GelisTarihi.ToShortDateString()</td>
            </tr>
        }
    </table>

}



@using (Html.BeginForm("IsemriKaydet", "Isemri"))
{
    <input type="hidden" name="MusteriId" value="@ViewBag.MusteriId" />
    <div class="row">
        <div class="col-md-4">
            Marka
            @Html.DropDownList("Markalar", new SelectList(ViewBag.Marka, "MarkaId", "MarkaAd"), "Marka Seç", new { @class = "form-control", required = "required", onchange = "ModelDoldur()" })
        </div>
        <div class="col-md-4">
            Model
            <select name="ModelId" id="ModelId" class="form-control">
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            Plaka
            <input type="text" name="Plaka" class="form-control" />
        </div>
        <div class="col-md-4">
            Şase No
            <input type="text" name="SaseNo" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            Araç Km
            <input type="text" name="AracKm" class="form-control" />
        </div>
        <div class="col-md-4">
            Model Yılı
            <input type="text" name="ModelYil" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            Yakıt Türü
            <select name="YakitTuru" class="form-control">
                <option>Benzin</option>
                <option>Dizel</option>
                <option>Benzin/Lpg</option>
                <option>Hybrid</option>
                <option>Elektrik</option>
            </select>
        </div>
        <div class="col-md-4">
            Servis Geliş Tarihi
            <input type="date" name="GelisTarihi" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            Servis Geliş Nedeni
            <textarea name="GelisSebebi" class="form-control"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <input type="submit" class="btn btn-primary float-end mt-2" value="Kaydet" />
        </div>
    </div>

}

<hr />

<table class="table table-sm table-responsive">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Plaka</th>
            <th>Geliş Tarihi</th>
            <th>Geliş Sebebi</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Model.Marka.MarkaAd</td>
            <td>@item.Model.ModelAd</td>
            <td>@item.Plaka</td>
            <td>@item.GelisTarihi.ToShortDateString()</td>
            <td>@item.GelisSebebi</td>
            <td>@Html.ActionLink("Detay","Detay",new { isemriId = item.IsemriId},new {@class = "btn btn-sm btn-secondary"})</td>
        </tr>
    }
</table>




<script>
    function ModelDoldur() {
        var _markaid = $('#Markalar').val();
        if ($('#Markalar').val() == "") {
            $('#ModelId').html("");
            $('#ModelId').append(
                $('<option></option>').val("").html("Model Seçiniz"));
        } else {
            $.ajax({
                url: '/MarkaModel/ModelDoldur',
                type: 'GET',
                dataType: 'JSON',
                data: { markaid: _markaid },
                success: function (modeller) {
                    $('#ModelId').html("");
                    $.each(modeller, function (i, model) {
                        $('#ModelId').append($('<option></option>').val(model.ModelId).html(model.ModelAd));
                    });
                }
            });
        }
    }
</script>

